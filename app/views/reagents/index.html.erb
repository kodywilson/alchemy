<h1>Listing reagents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Picture</th>
      <th>Trait 1</th>
      <th>Trait 2</th>
      <th>Trait 3</th>
      <th>Trait 4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reagents.each do |reagent| %>
      <tr>
        <td><%= reagent.name %></td>
        <td><%= reagent.picture %></td>
        <td><%= reagent.trait_1 %></td>
        <td><%= reagent.trait_2 %></td>
        <td><%= reagent.trait_3 %></td>
        <td><%= reagent.trait_4 %></td>
        <td><%= link_to 'Show', reagent %></td>
        <td><%= link_to 'Edit', edit_reagent_path(reagent) %></td>
        <td><%= link_to 'Destroy', reagent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reagent', new_reagent_path %>
